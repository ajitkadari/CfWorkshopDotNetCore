@model CfWorkshopDotNetCore.Models.Note
<div class="container">
    <div class="row">
        <div class="col-md-12">
            <h2>Note Details</h2>
            <hr/>
        </div>
    </div>
    <div class="row">
        <div class="col-md-12">
            <form asp-controller="Notes" asp-action="Edit">
                <input type="hidden" asp-for="ID"/>
                <div class="form-group">
                    <label>Created:</label>
                    <p class="form-control-static">@Html.DisplayFor(m => m.Created)</p>
                    <input type="hidden" asp-for="Created"/>
                </div>
                <div class="form-group">
                    <label for="Text">Note:</label>
                    <textarea asp-for="Text" class="form-control" rows="3" cols="20" placeholder="Note"></textarea>
                    <span asp-validation-for="Text" class="text-danger"/>
                </div>
                <div class="well">
                    <input type="submit" class="btn btn-primary" value="Save"/>
                    <a asp-controller="Notes" asp-action="Index" class="btn btn-warning">Cancel</a>
                </div>
            </form>
        </div>
    </div>
</div>
